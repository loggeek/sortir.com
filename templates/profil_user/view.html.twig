{% extends 'base.html.twig' %}

{% block title %} profil view {% endblock %}

{% block body %}
    <h2 class="text-center">{{ user.username }}</h2>

    <div class="container">
        <div class="row">
            <div class="logo col-md-3">
                {% if user.profileImage %}
                    <img class="img-thumbnail rounded-circle" src="{{ asset('uploads/profile_images/' ~ user.profileImage) }}" alt="{{ user.username }}'s profile picture">
                {% else %}
                    <img class="img-thumbnail rounded-circle" src="../uploads/profile_images/default_image.png" class="rounded float-start" alt="Aucun photo de profil">
                    {#                    <p class="text-center text-secondary"> Aucune image de profile disponible...</p>#}
                {% endif %}
            </div>
            <div class="infos col-md-7">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ user.surname }} {{ user.name }}</li>
                    <li class="list-group-item"><label>Téléphone :</label> {{ user.phone }}</li>
                    <li class="list-group-item"><label>E-mail :</label> {{ user.email }}</li>
                    <li class="list-group-item"><label>Campus :</label> {{ user.campus.name }}</li>
                </ul>
            </div>
            <div class="d-flex justify-content-center">
                {% if myprofile %}
                    <a href="{{ path('profil.edit') }}" class="btn btn-primary">Modifier</a>
                {% else %}
                    <a href="{{ path('app_home') }}" class="btn btn-primary">Retour</a>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}